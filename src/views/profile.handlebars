{{#section 'css'}}
<link rel="stylesheet" href="/styles/profile.css">
{{/section}}

{{#section 'meta'}}
<meta name="author" content="{{blogger.first_name}} {{blogger.last_name}}"/>
<meta name="description" content="The Computer Science Blogs profile of {{blogger.first_name}} {{blogger.last_name}}"/>
<meta property="og:title"  content="The Computer Science Blogs profile of {{blogger.first_name}} {{blogger.last_name}}" /> 
<meta property="og:site_name" content="Computer Science Blogs"/>
<meta property="og:type"   content="profile"/> 
<meta property="og:locale" content="en_GB"/>
<meta property="og:image"  content="{{blogger.profile_picture_uri}}" /> 
<meta property="profile:first_name" content="{{blogger.first_name}}"/>
<meta property="profile:last_name" content="{{blogger.last_name}}"/>
<meta property="profile:username" content="{{blogger.vanity_name}}"/>
{{/section}}

<div>
	<div itemscope itemtype="https://schema.org/Person">
	    <div id="profile-header">
	        <div id="profile-header-content">
	            <img class="avatar" src="{{blogger.profile_picture_uri}}" alt="Avatar" itemprop="image"/>
	            <div id="profile-header-title">
	                <ul>
	                    <li><h2><span itemprop="givenName">{{blogger.first_name}}</span> <span itemprop="familyName">{{blogger.last_name}}</span></h2></li>
	                    <li><a id="ph-site" href="{{blogger.website_uri}}" itemprop="url">{{urlFormat blogger.website_uri}}</a></li>
	                </ul>
	            </div>
	        </div>
	    </div>
	    <div class="profile-body">
	        <h3>About</h3>
	        <p itemprop="description">{{blogger.bio}}</p>
	        <div>
	            {{#if blogger.github_username}}
	            <a class="button" href="http://github.com/{{blogger.github_username}}" itemprop="url">
	                <div class="button-bg"></div>
	                <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
	                    <use xlink:href="/images/defs.svg#icon-github"></use>
	                </svg>
	                <p>GitHub</p>
	            </a>
	            {{/if}}
	            {{#if blogger.twitter_username}}
	            <a class="button" href="http://twitter.com/{{blogger.twitter_username}}" itemprop="url">
	                <div class="button-bg"></div>
	                <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
	                    <use xlink:href="/images/defs.svg#icon-twitter"></use>
	                </svg>
	                <p>Twitter</p>
	            </a>
	            {{/if}}
	            {{#if blogger.linkedin_uri}}
	            <a class="button" href="{{blogger.linkedin_uri}}" itemprop="url">
	                <div class="button-bg"></div>
	                <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
	                    <use xlink:href="/images/defs.svg#icon-linkedin"></use>
	                </svg>
	                <p>LinkedIn</p>
	            </a>
	            {{/if}}
	            {{#if blogger.cv_uri}}
	            <a class="button" href="{{blogger.cv_uri}}" itemprop="url">
	                <div class="button-bg"></div>
	                <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
	                    <use xlink:href="/images/defs.svg#icon-cv"></use>
	                </svg>
	                <p>CV</p>
	            </a>
	            {{/if}}
	        </div>
		</div>
		<div class="profile-body">
	        <h3>Blog posts</h3>

	        {{#if page.blogs}}
	        {{#each page.blogs}}
	        <article itemscope itemtype="http://schema.org/BlogPosting">
	            <h4 itemprop="headline"><a href="{{link}}">{{title}}</a></h4>
	            <p class="article-date" itemprop="datePublished">{{formatDateLong date_published}}</p>
	            {{#if imageUrl}}<img itemprop="image" src="{{image_uri}}" alt="Featured Image"/>{{/if}}
	            <p itemprop="articleBody">{{{truncateAndRemoveHTML summary 400}}} <a class="read-more" itemprop="url" href="{{link}}">Read more &#8594;</a></p>
	            {{#unless @last}}<hr/>{{/unless}}
	        </article>
	        {{/each}}
	        {{else}}
	        <p>Blog posts will appear here on the next sync if there are any to view.</p>
	        {{/if}}

	        <div id="nav-pages">
	            {{#if page.hasLess}}
	            <a id="newer" class="page-btn" href="{{url}}page={{add page.pageNumber -1}}">
	                <svg viewbox="0 0 37.62 67.32">
	                    <use xlink:href="/images/defs.svg#left-arrow"></use>
	                </svg>
	                <p>Newer</p>
	            </a>
	            {{/if}}
	            {{#if page.hasMore}}
	            <a id="older" class="page-btn" href="{{url}}page={{add page.pageNumber 1}}">
	                <p>Older</p>
	                <svg viewbox="0 0 37.62 67.32">
	                    <use xlink:href="/images/defs.svg#right-arrow"></use>
	                </svg>
	            </a>
	            {{/if}}
	        </div>
		</div>
    </div>
</div>
