{{#section 'css'}}
<link rel="stylesheet" href="/styles/index.css">
{{/section}}

{{#section 'meta'}}
<meta name="description" content="CSBlogs.com is the blog aggregation website for Computer Scientists. Here you can find blogs from Computer Science Students, Lecturers and Practitioners."/>
{{/section}}

<div id="space-saver"></div>
{{#each posts}}
  <article itemscope itemtype="http://schema.org/BlogPosting">
    <header>
      <h2 itemprop="headline"><a href="{{link}}">{{title}}</a></h2>
    </header>
    {{#if image_uri}}
    <div class="featured-image">
      <a href="{{link}}">
        <img itemprop="image" src="{{image_uri}}" alt="Featured Image"/>
      </a>
    </div>
    {{/if}}
    <p itemprop="articleBody">{{{truncateAndRemoveHTML description 400}}} <a itemprop="url" class="read-more" href="{{link}}">Read more &#8594;</a></p>
    <footer>
      <div class="article-info">
        <div itemscope itemprop="author" itemtype="https://schema.org/Person">
          <a class="avatar" href="/bloggers/{{author.vanity_name}}">
            <img class="avatar" itemprop="image" src="{{author.profile_picture_uri}}" alt="Avatar"/>
          </a>
          <div class="article-author">
            <a itemprop="sameAs" href="/bloggers/{{author.vanity_name}}">
              <span itemprop="givenName">{{author.first_name}}</span>
              <span itemprop="familyName">{{author.last_name}}</span>
            </a>
          </div>
        </div>
        <p class="article-date" itemprop="datePublished">{{formatDateShort date_published}}</p>
      </div>
    </footer>
    {{#unless @last}}<hr/>{{/unless}}
  </article>
{{/each}}
